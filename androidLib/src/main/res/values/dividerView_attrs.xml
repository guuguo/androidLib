    <!-- 以下是重用attr的正确姿势,一切为了在布局中可以自动提示-->
    <!-- divider粗度 -->
    <attr name="dv_dividerWidth" format="dimension"/>
    <!-- divider长度,单位dp 默认0 matchParent-->
    <attr name="dv_dividerLength" format="dimension"/>
    <!-- divider颜色-->
    <attr name="dv_dividerColor" format="color"/>
    <!-- divider 聚焦颜色-->
    <attr name="dv_dividerColorFocus" format="color"/>
    <!-- 背景颜色 -->
    <attr name="dv_backgroundColor" format="color"/>
    <!-- 按压背景颜色 -->
    <attr name="dv_backgroundColorPress" format="color"/>
    <!-- 按压字体颜色 -->
    <attr name="dv_textColorPress" format="color"/>
    <!-- 背景是否ripple -->
    <attr name="dv_isRipple" format="boolean"/>
    <!-- divider start margin-->
    <attr name="dv_marginStart" format="dimension"/>
    <!-- divider end margin-->
    <attr name="dv_marginEnd" format="dimension"/>
    <!-- divider margin-->
    <attr name="dv_margin" format="dimension"/>
    <!-- dividerAlign-->
    <attr name="dv_align">
        <enum name="dv_NO" value="0"/>
        <enum name="dv_TL" value="1"/>
        <enum name="dv_TC" value="2"/>
        <enum name="dv_TR" value="3"/>
        <enum name="dv_BL" value="4"/>
        <enum name="dv_BC" value="5"/>
        <enum name="dv_BR" value="6"/>
        <enum name="dv_LT" value="7"/>
        <enum name="dv_LC" value="8"/>
        <enum name="dv_LB" value="9"/>
        <enum name="dv_RT" value="10"/>
        <enum name="dv_RC" value="11"/>
        <enum name="dv_RB" value="12"/>
    </attr>

    <declare-styleable name="DividerTextView">
        <attr name="dv_dividerWidth"/>
        <attr name="dv_dividerLength"/>
        <attr name="dv_dividerColor"/>
        <attr name="dv_marginStart"/>
        <attr name="dv_marginEnd"/>
        <attr name="dv_margin"/>
        <attr name="dv_align"/>
        <attr name="dv_backgroundColor"/>
        <attr name="dv_backgroundColorPress"/>
        <attr name="android:textColor"/>
        <attr name="dv_textColorPress"/>
        <attr name="dv_dividerColorFocus"/>
        <attr name="dv_isRipple"/>
    </declare-styleable>

